<!DOCTYPE html>
  <!--[if IE 9 ]><html class="ie9"><![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Roadmaps">
    <meta name="author" content="Roadmaps">

    <title>Sentinela::PCR</title>

    <!-- Vendor CSS -->
		<%= stylesheet_link_tag    "application", media: "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
  </head>

  <body class="tw-toggled">
    <header id="header" class="clearfix" style="background-color: #094698; border-bottom: 5px solid #f9ee32;">
      <ul class="header-inner">
        <li id="menu-trigger" data-trigger="#sidebar">
          <div class="line-wrap">
            <div class="line top"></div>
            <div class="line center"></div>
            <div class="line bottom"></div>
          </div>
        </li>

        <li class="logo">
          <%= link_to 'SENTINELA::PCR', root_path, style: "font-weight: bold" %>
        </li>

        <li class="pull-right">
          <ul class="top-menu">
            <li id="toggle-width" style="display: none">
              <div class="toggle-switch">
                <input id="tw-switch" type="checkbox" hidden="hidden" checked="true">
                <label for="tw-switch" class="ts-helper"></label>
              </div>
            </li>

            <!-- <li id="top-search">
              <a href=""><i class="tm-icon zmdi zmdi-search"></i></a>
            </li> -->
          </ul>
        </li>
      </ul>


      <!-- Top Search Content -->
      <div id="top-search-wrap">
        <div class="tsw-inner">
          <i id="top-search-close" class="zmdi zmdi-arrow-left"></i>
          <input type="text">
        </div>
      </div>
    </header>

    <section id="main">
      <% if current_user %>
        <aside id="sidebar" class="sidebar c-overflow">
          <%= render "layouts/menu" %>
        </aside>
      <% else %>
        <style rel="stylesheet" type="text/css">
          #menu-trigger {
            display: none;
          }
        </style>
      <% end %>

      <section id="content">
        <div class="container">
          <% if notice %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
              <%= notice %>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
              <%= alert %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </section>
    </section>

    <footer id="footer">
      Copyright &copy; 2017 Prefeitura da Cidade do Recife

      <ul class="f-menu">
        <li><a href="/home/index">Home</a></li>
        <!-- <li><a href="">Dashboard</a></li> -->
        <!-- <li><a href="">Reports</a></li> -->
        <!-- <li><a href="">Support</a></li> -->
        <li><a href="/home/contact">Contact</a></li>
      </ul>
    </footer>

      <!-- Page Loader -->
    <div class="page-loader">
      <div class="preloader pls-blue">
        <svg class="pl-circular" viewBox="25 25 50 50">
          <circle class="plc-path" cx="50" cy="50" r="20" />
        </svg>
        <p>Aguarde...</p>
      </div>
    </div>

