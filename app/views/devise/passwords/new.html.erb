<div class="card">
  <div class="card-header">
    <h2>Forgot your password?</h2>
    <ul class="actions">
      <li>
          <a href="" title="<%= t('Refresh') %>">
              <i class="zmdi zmdi-refresh-alt"></i>
          </a>
      </li>
    </ul>
</div>
  <div class="card-body card-padding">
    <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.inputs do %>
        <%= f.input :email %>
      <% end %>

      <%= f.actions do %>
        <%= f.action :submit, label: "Send me reset password instructions", :as => :button, :button_html => { class: "btn btn-primary btn-sm m-t-10 waves-effect" } %>
        <%= render "devise/shared/links" %>
      <% end %>
    <% end %>
	</div>
</div>
