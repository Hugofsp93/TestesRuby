    <div class="row">
      <div class="col-xs-12">
        <%= f.input :list_name %>
      </div>
    </div>
    <br>
    <div id="product_names">
      <%= link_to_add_association('Adicionar produto' , f, :product_names, data: {"association-insertion-method" => :append}) %>
      <%= f.semantic_fields_for :product_names do |product_names_fields| %>
      <%= render partial: "product_name_fields" , locals: { f: product_names_fields} %>
      <% end %>
    </div>

