<div class="card">
  <div class="card-header">
    <h2><%= t('helpers.submit.general.show', model: t('activerecord.models.product_name.one')) %></h2>

    <ul class="actions">
      <li>
        <%= link_to product_names_path, title: t('activerecord.link.back_to_list') do %>
            <i class="zmdi zmdi-arrow-left"></i>
        <% end %>
      </li>
      <li>
          <a href="" title="<%= t('Refresh') %>">
              <i class="zmdi zmdi-refresh-alt"></i>
          </a>
      </li>
      <li>
				<%= link_to edit_product_name_path(@product_name), title: t('Edit') do %>
            <i class="zmdi zmdi-edit"></i>
        <% end if can? :edit, @product_name %>
      </li>
    </ul>
  </div>
  <div class="card-body card-padding">
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.product_name.created_at') %></label><br/>&nbsp;
          <%= @product_name.created_at %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.product_name.updated_at') %></label><br/>&nbsp;
          <%= @product_name.updated_at %>
        </div>
      </div>
  </div>
</div>
