<%= semantic_form_for @user, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :avatar, as: :image %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <!-- <%= f.input :locale, as: :select, collection: I18n.available_locales.map { |x| x.to_s } %> -->
    <% if current_user.has_role? :admin %>
      <%= f.input :is_active %>
      <%= f.input :roles, as: :check_boxes, collection: Hash[Role.global.map{|r| [t(r.name),r.id]}] %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: "Salvar", :as => :button, :button_html => { class: "btn btn-primary btn-sm m-t-10 waves-effect" } %>
  <% end %>
<% end %>
