<div class="card">
  <div class="card-header">
    <h2><%= t('helpers.submit.general.show', model: t('activerecord.models.global_setting.one')) %></h2>

    <ul class="actions">
      <li>
        <%= link_to global_settings_path, title: t('activerecord.link.back_to_list') do %>
            <i class="zmdi zmdi-arrow-left"></i>
        <% end %>
      </li>
      <li>
          <a href="" title="<%= t('Refresh') %>">
              <i class="zmdi zmdi-refresh-alt"></i>
          </a>
      </li>
      <li>
				<%= link_to edit_global_setting_path(@global_setting), title: t('Edit') do %>
            <i class="zmdi zmdi-edit"></i>
        <% end if can? :edit, @global_setting %>
      </li>
    </ul>
  </div>
  <div class="card-body card-padding">
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.global_setting.single_list') %></label><br/>&nbsp;
          <%= @global_setting.single_list %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.global_setting.created_at') %></label><br/>&nbsp;
          <%= @global_setting.created_at %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.global_setting.updated_at') %></label><br/>&nbsp;
          <%= @global_setting.updated_at %>
        </div>
      </div>
  </div>
</div>
