<div class="card">
  <div class="card-header">
    <h2><%%= t('helpers.submit.general.show', model: t('activerecord.models.<%= singular_table_name %>.one')) %></h2>

    <ul class="actions">
      <li>
        <%%= link_to (controller_name == "versions" ? index_versions_path(model_name: "<%= table_name %>") : <%= table_name %>_path), title: t('activerecord.link.back_to_list') do %>
            <i class="zmdi zmdi-arrow-left"></i>
        <%% end %>
      </li>
      <li>
          <a href="" title="<%%= t('Refresh') %>">
              <i class="zmdi zmdi-refresh-alt"></i>
          </a>
      </li>
      <li>
				<%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), title: t('Edit') do %>
            <i class="zmdi zmdi-edit"></i>
        <%% end if can? :edit, @<%= singular_table_name %> %>
      </li>
    </ul>
  </div>
  <div class="card-body card-padding">
    <div class="row">
    <%- attributes.each do |attribute| -%>
      <div class="col-xs-12">
        <label class="fg-label"><%%= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>') %></label><br/>&nbsp;
        <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
      </div>
    <%- end -%>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <label class="fg-label"><%%= t('activerecord.attributes.<%= singular_table_name %>.created_at') %></label><br/>&nbsp;
        <%%= @<%= singular_table_name %>.created_at %>
      </div>
      <div class="col-sm-6">
        <label class="fg-label"><%%= t('activerecord.attributes.<%= singular_table_name %>.updated_at') %></label><br/>&nbsp;
        <%%= @<%= singular_table_name %>.updated_at %>
      </div>
    </div>
  </div>
</div>

<%%= render partial: "layouts/record_changes", locals: { :@object => @<%= singular_table_name %> } %>